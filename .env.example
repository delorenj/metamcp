# PostgreSQL Configuration
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=metamcp

# Authentication
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production

# Optional OIDC Configuration
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISCOVERY_URL=
OIDC_AUTHORIZATION_URL=
OIDC_PROVIDER_ID=oidc
OIDC_SCOPES=openid email profile
OIDC_PKCE=true

# Cognee MCP Configuration
# LLM Provider: openai, anthropic, or other supported providers
COGNEE_LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Cognee Memory Backend: local, postgres, redis
COGNEE_MEMORY_BACKEND=local

# Optional: Connect Cognee to PostgreSQL for persistent knowledge graphs
COGNEE_DATABASE_URL=postgresql://your_postgres_user:your_postgres_password@host.docker.internal:15434/cognee